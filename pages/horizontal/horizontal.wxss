/* pages/horizontal/horizontal.wxss */
.horizontal-box{
  width: 100%;
  height: 80vw;
  display: flex;
  justify-content: center;
  position: relative;
}
.horizontal-border{
  width: 50vw;
  height: 50vw;
  border-radius: 25vw;
  border: 2px solid #555; 
}
.horizontal-center{
  width: 50vw;
  height: 50vw;
  background: red;
  border-radius: 25vw;
  position: absolute;
  top: 2px;
}